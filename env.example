# Database
DATABASE_URL="postgresql://username:password@localhost:5432/arcast_db"

# NextAuth.js
NEXTAUTH_SECRET="your-nextauth-secret-key"
NEXTAUTH_URL="http://localhost:3000"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# AWS S3 / DigitalOcean Spaces Configuration
# Get these from your DigitalOcean Spaces dashboard
AWS_REGION=blr1
AWS_ENDPOINT=https://blr1.digitaloceanspaces.com
AWS_ACCESS_KEY_ID=your-digitalocean-spaces-access-key
AWS_SECRET_ACCESS_KEY=your-digitalocean-spaces-secret-key
AWS_S3_BUCKET_NAME=arcast-s3

# Optional: For presigned URLs (if you want to use them)
AWS_S3_PRESIGNED_URL_EXPIRES="3600"

# Payment Provider (MAMO Pay)
MAMO_PAY_API_KEY="your-mamo-pay-api-key"
MAMO_PAY_SECRET_KEY="your-mamo-pay-secret-key"

# Notion Integration (if using)
NOTION_API_KEY="your-notion-api-key"
NOTION_DATABASE_ID="your-notion-database-id"

# Email Service (if using)
EMAIL_SERVICE_API_KEY="your-email-service-api-key"
EMAIL_FROM="noreply@yourdomain.com"

# Analytics (optional)
GOOGLE_ANALYTICS_ID="your-google-analytics-id"

# Development
NODE_ENV="development"


# ===== Admin bootstrap (used by scripts/seed-admin.js) =====
# REQUIRED: set ADMIN_USERNAME and either ADMIN_PASSWORD or ADMIN_PASSWORD_HASH (bcrypt, starts with $2...)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="change-me"
# ADMIN_PASSWORD_HASH=""
ADMIN_EMAIL="admin@arcast.com"
ADMIN_ROLE="admin"
ADMIN_IS_ACTIVE="true"
# If true and admin already exists + password provided -> updates password
ADMIN_UPDATE_PASSWORD_IF_EXISTS="true"

# ===== Stage import (used by scripts/import-from-stage.js) =====
# If true, on container start imports dynamic content from the given URL
STAGE_IMPORT_ON_STARTUP="false"
STAGE_SEED_SOURCE_URL="https://arcast-stage.vercel.app"
# Optional auth for stage API
# STAGE_SEED_BEARER=""
# Additional headers as JSON if needed, e.g. {"X-API-Key":"..."}
# STAGE_SEED_HEADERS="{}"

# ===== Seeding and migrations controls (docker-entrypoint.sh) =====
SEED_ON_STARTUP="true"
FORCE_SEED="false"
# One-time full reset + schema sync (drop DB). Use only for initial bootstrap.
RESET_AND_RESEED="false"
# If true (or NODE_ENV!=production and var not set), auto-resets DB on failed migrations (P3009)
PRISMA_RESET_ON_FAILURE="false"


# ===== Let's Encrypt / Certbot (Nginx in docker-compose) =====
# Enable ONLY on production node (e.g. DigitalOcean droplet)
ENABLE_CERTBOT="false"
# Your production domain and email for Let's Encrypt registration/alerts
CERTBOT_DOMAIN="arcast.studio"
CERTBOT_EMAIL="brite@brite-apps.com"
